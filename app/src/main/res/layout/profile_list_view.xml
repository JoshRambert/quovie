<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/profile_list_background">

        <ImageView
            android:background="@drawable/image_background"
            android:src="@drawable/q_solid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="15dp"
            android:textStyle="italic|bold"
            android:textSize="20sp"
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Title" />

        <TextView

            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/contentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleView"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:text="Content" />

        <TextView
            android:id="@+id/textUrl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@+id/contentView"
            android:layout_alignTop="@+id/contentView"
            android:layout_marginTop="23dp"
            android:text="url" />

        <Button
            android:id="@+id/deleteButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_below="@+id/contentView"
            android:layout_toEndOf="@+id/textUrl"
            android:text="Delete"
            android:textAlignment="textStart"
            android:textColor="@color/accent_material_dark"
            android:textSize="12sp"
            android:textStyle="italic" />


    </RelativeLayout>

</RelativeLayout>