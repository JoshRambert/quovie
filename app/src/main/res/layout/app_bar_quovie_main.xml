<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ebookfrenzy.quovie.QuovieMainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:itemBackground="@color/primary_material_dark_1"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="#ffffff"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_alignParentBottom="true" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#73000000"
        android:theme="@style/QuovieThemeDark.NoActionbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                app:popupTheme="@android:style/Theme.Black" />

    </android.support.design.widget.AppBarLayout>

    <include
        layout="@layout/content_quovie_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
