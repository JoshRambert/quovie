<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ebookfrenzy.quovie.DisplayNewsActivity"
    android:background="@color/primary_text_default_material_light">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDisplayNews"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:popupTheme="@android:style/Theme.Black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/NewsRecycler_View"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/NewsProgressBar"/>

</RelativeLayout>
